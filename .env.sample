# now.ink Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ========================================
# General Configuration
# ========================================
NODE_ENV=development
APP_NAME=now.ink
VERSION=0.1.0

# ========================================
# Web Frontend (Nuxt 4)
# Located in: /home/quantium/labs/now.ink/web/.env
# ========================================
NUXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NUXT_PUBLIC_WS_URL=ws://localhost:8080/ws
NUXT_PUBLIC_SOLANA_NETWORK=devnet
NUXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
NUXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NUXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# Mobile App (React Native)
# Located in: /home/quantium/labs/now.ink/mobile/.env
# ========================================
API_URL=http://localhost:8080/api/v1
WS_URL=ws://localhost:8080/ws
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
APP_NAME=now.ink

# ========================================
# Backend API (Go)
# Located in: /home/quantium/labs/now.ink/backend/.env
# ========================================

# Server
PORT=8080
ENV=development

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=nowink
DB_PASSWORD=change_this_password_in_production
DB_NAME=nowink_dev
DB_SSLMODE=disable

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication
# Generate with: openssl rand -base64 32
JWT_SECRET=change_this_jwt_secret_to_a_random_string_in_production
JWT_EXPIRY=24h

# Solana Blockchain
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
# For production, use paid RPC:
# SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_KEY
PLATFORM_WALLET_PRIVATE_KEY=your_base58_encoded_private_key_here

# Arweave Storage
ARWEAVE_WALLET_PATH=/home/quantium/labs/now.ink/backend/arweave-wallet.json
ARWEAVE_NODE_URL=https://arweave.net

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST=20
RATE_LIMIT_FREE_MINTS_PER_DAY=100

# Platform Commission (TBD - set to 0 for development)
PLATFORM_COMMISSION_PERCENTAGE=0.0
PLATFORM_COMMISSION_FIXED_LAMPORTS=0

# ========================================
# External Services
# ========================================

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Monitoring (optional)
SENTRY_DSN=
GRAFANA_URL=

# Email (for notifications, optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@now.ink

# ========================================
# Development Tools
# ========================================

# Enable debug logging
DEBUG=false
LOG_LEVEL=info

# Enable hot reload
HOT_RELOAD=true

# Database migrations auto-run
AUTO_MIGRATE=false

# ========================================
# Production Overrides
# Uncomment and configure for production deployment
# ========================================

# NODE_ENV=production
# SOLANA_NETWORK=mainnet-beta
# SOLANA_RPC_URL=https://solana-mainnet.g.alchemy.com/v2/YOUR_KEY
# DB_SSLMODE=require
# AUTO_MIGRATE=false
# DEBUG=false
# LOG_LEVEL=warn

# ========================================
# Notes
# ========================================
# 1. For local development, use devnet and test wallets
# 2. Never commit real private keys or secrets
# 3. Use absolute paths (e.g., /home/quantium/labs/now.ink/...)
# 4. Generate strong JWT secrets for production
# 5. Configure proper CORS origins in production
# 6. Use paid Solana RPC providers for better reliability
# 7. Fund Arweave wallet for permanent video storage
