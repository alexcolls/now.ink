# now.ink Mobile App Configuration
# Copy this to .env and fill in your values

# API Configuration
API_URL=http://localhost:8080/api/v1
WS_URL=ws://localhost:8080/ws

# For Android emulator, use: http://10.0.2.2:8080/api/v1
# For iOS simulator, use: http://localhost:8080/api/v1
# For physical device on same network, use your computer's IP: http://192.168.1.X:8080/api/v1

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# App Configuration
APP_NAME=now.ink
APP_VERSION=0.1.0

# Debug Mode
DEBUG=true
