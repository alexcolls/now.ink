# now.ink Backend API Configuration
# Copy to .env and configure

# Server
PORT=8080
ENV=development

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=nowink
DB_PASSWORD=change_this_in_production
DB_NAME=nowink_dev
DB_SSLMODE=disable

# Redis (caching)
REDIS_URL=redis://localhost:6379

# JWT Secret (generate: openssl rand -base64 32)
JWT_SECRET=change_this_jwt_secret_in_production
JWT_EXPIRY=24h

# Solana Blockchain
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
PLATFORM_WALLET_PRIVATE_KEY=your_base58_key_here

# Arweave
ARWEAVE_WALLET_PATH=/home/quantium/labs/now.ink/backend/arweave-wallet.json
ARWEAVE_NODE_URL=https://arweave.net

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_FREE_MINTS_PER_DAY=100

# Platform Commission (TBD - 0 for dev)
PLATFORM_COMMISSION_PERCENTAGE=0.0
